@model Students.Common.Models.LectureRoom
@using Students.Interfaces
@using System.Globalization


@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Details";
}

<h1>@sharedResourcesService.GetString("Details", cultureInfo)</h1>

<div>
    <h4>@sharedResourcesService.GetString("Lecture Room", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Number", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Floor", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("Subjects", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var studentSubject in Model.Subjects)
                {
                    <li>@studentSubject.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@sharedResourcesService.GetString("Edit", cultureInfo)</a> |
    <a asp-action="Index">@sharedResourcesService.GetString("Back to List", cultureInfo)</a>
</div>
